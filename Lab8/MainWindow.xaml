<Window x:Class="Lab8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8"
        xmlns:views="clr-namespace:Lab8.Views"
        mc:Ignorable="d"
        Title="SG DBTool" Height="700" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Get Paginated Data">
                <views:GetPaginatedDataPage />
            </TabItem>
            <TabItem Header="Insert Staff">
                <views:InsertStaffPage />
            </TabItem>
            <TabItem Header="Update Parcel Status">
                <views:UpdateParcelStatusPage />
            </TabItem>
            <TabItem Header="Call Stored Procedure">
                <views:CallStoredProcedurePage />
            </TabItem>
            <TabItem Header="Simulate Transaction Conflict">
                <views:SimulateTransactionConflictPage />
            </TabItem>
            <TabItem Header="Resolve Conflict">
                <views:ResolveConflictWithHigherIsolationPage />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
